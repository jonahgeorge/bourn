<h1>Posts</h1>

<table class="table">
  <thead>
    <th>Body</th>
    <th>Author</th>
    <th>Tags</th>
    <th>Visible</th>
    <!-- <th>Created At</th> -->
    <!-- <th>Updated At</th> -->
  </thead>
  <tbody>
  <% @posts.each do |post| %>
    <tr>
      <td><%= truncate(post.body, length: 80, separator: ' ') %></td>
      <td><%= link_to post.user.name, admin_user_path(post.user) %></td>
      <td><%= post.tags %></td>
      <td><%= post.is_visible %></td>
      <!-- <td><%= post.created_at %></td> -->
      <!-- <td><%= post.updated_at %></td> -->
      <td>
        <%= link_to "Edit", edit_admin_post_path(post), class: "btn btn-sm btn-primary" %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
