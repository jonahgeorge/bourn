<h2>Users</h2>

<table class="table">
  <thead>
    <th>Name</th>
    <th>Email</th>
    <th>Role</th>
    <th></th>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td><%= user.role %></td>
      <td>
        <%= link_to "Edit", edit_admin_user_path(user), class: "btn btn-sm btn-primary" %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
