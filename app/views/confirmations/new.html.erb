<h2>Email Confirmation</h2>

<p>Please confirm your email address before proceeding.</p>

<details>
 <summary>Resend confirmation email</summary>

 <%= form_for @form, url: url_for(controller: 'confirmations', action: 'create'), html: {class: 'mt-2'} do |f| %>
   <%= render "form_errors", { form: @form } %>

   <div class='form-group'>
     <%= f.label :email %>
     <%= f.email_field :email, class: 'form-control', required: true %>
   </div>

   <div class="form-group">
     <%= recaptcha_tags %>
   </div>

   <div class='form-group'>
     <%= f.submit 'Submit', class: 'btn btn-primary' %>
   </div>
 <% end %>
</details>
