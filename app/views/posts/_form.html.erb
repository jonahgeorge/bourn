<%= form_for @post do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, required: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, class: "form-control", rows: 15 %>
  </div>

  <div class="form-group">
    <%= f.label :tags_list, "Tags" %>
    <%= f.text_field :tags_list, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :created_at %>
    <%= f.text_field :created_at, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit nil, class: "btn btn-primary" %>
  </div>
<% end %>
