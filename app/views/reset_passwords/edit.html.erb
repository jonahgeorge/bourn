<h2>Reset Password</h2>

<%= form_for @form, url: url_for(controller: :reset_passwords, action: :update), method: :put do |f| %>
  <%= f.hidden_field :reset_password_token %>

  <div class="form-group">
    <%= f.label :new_password %>
    <%= f.password_field :new_password, required: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>
