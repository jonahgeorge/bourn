<h1>Sign in</h1>

<%= form_tag session_path, method: :post do |f| %>

  <div class="form-group">
    <%= label_tag :email %>
    <%= email_field_tag :email, nil, required: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= label_tag :password %>
    <%= password_field_tag :password, nil, required: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= submit_tag nil, class: "btn btn-primary" %>
  </div>
<% end %>
