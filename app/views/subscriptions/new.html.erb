<div class='row'>
  <div class='col-sm-6'>
    <div class='card'>
      <div class='card-block'>
        <h2 class='card-title'>New Subscription</h2>

        <label class="amount">
          <span>Amount: $1.00 per year</span>
        </label>

        <%= form_for @form, url: url_for(controller: 'subscriptions', action: 'create') do |f| %>
          <div class="form-group">
            <%= f.label :number, "Credit card number" %>
            <%= f.text_field :number, class: "form-control" %>
          </div>

          <div class="row">
            <div class="col-3 form-group">
              <%= f.label :exp_month, "Month" %>
              <%= f.select :exp_month, 1..12, {}, { class: "form-control" } %>
            </div>

            <div class="col-3 form-group">
              <%= f.label :exp_year, "Year" %>
              <%= f.select :exp_year, Date.today.year..5.years.from_now.year, {}, { class: "form-control" } %>
            </div>

            <div class="col-6 form-group">
              <%= f.label :cvc, "CVC" %>
              <%= f.number_field :cvc, class: "form-control" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :postal_code %>
            <%= f.text_field :postal_code, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :coupon %>
            <%= f.text_field :coupon, class: "form-control" %>
            <p class="form-text text-muted">
              Use coupon <code>OSU420</code> for a free year subscription!
            </p>
          </div>

          <div class="form-group">
            <%= f.submit "Submit Payment", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class='col-sm-6'>
    <div class='card'>
      <div class="card-block">
        <h2 class="card-title">Partner Sites</h2>
        <p class="card-text">Included below are other sites from CS295. Check them out!</p>
      </div>
      <ul class='list-group list-group-flush'>
        <li class='list-group-item'>
          <a href="http://doghousepolitics.com/" target="_blank">
            <img width=28  src='https://i2.wp.com/doghousepolitics.com/wp-content/uploads/2017/05/cropped-DHP-logo-e1494355890457.jpg?fit=150%2C133&ssl=1'>
            Doghouse Politics
          </a>
        </li>
        <li class='list-group-item'>
          <a href="http://save-cmlc.org/" target="_blank">Save Corvallis Multicultural Literacy Center</a>
        </li>
        <li class='list-group-item'>
          <a href="http://www.hellolorem.com/" target="_blank">Hello Lorem</a>
        </li>
        <li class='list-group-item'>
          <a href="https://cookingtutorials.net" target="_blank">
            <img width=28  src='data:image/svg+xml;base64,'>
            Cooking Tutorials
          </a>
        </li>
        <li class='list-group-item'>
          <a href="https://renote.org/" target="_blank">Renote</a>
        </li>
        <li class='list-group-item'>
          <a href="http://endeolion.com" target="_blank">
            <img width=28  src='https://i1.wp.com/endeolion.com/wp-content/uploads/2017/05/logo-bw-trace.png?w=250&ssl=1'>
            Endeolion</a>
        </li>
        <li class='list-group-item'>
          <a href="https://pamvanlonden.com/" target="_blank">Creating Every Day</a>
        </li>
      </ul>
    </div>
    <br>
    <%= image_tag "qrcode.png", class: "mx-auto d-block img-fluid" %>
  </div>

</div>
