<div class="row mb-4">
  <div class="col-2">
    <img class="rounded img-fluid" src="<%= avatar_url @user %>" width=128>
  </div>

  <div class="col-10">
    <h2><%= @user.name %></h2>
    <p><%= @user.bio || "Nothing here for now ðŸ˜”" %></p>

    <% if @user.location %>
      <%= octicon "globe", class: "mr-1" %>
      <%= @user.location %>
      <br>
    <% end %>

    <% if @user.url %>
      <%= link_to @user.url, target: "_blank" do %>
        <%= octicon "pin", class: "mr-1" %>
        <%= @user.url %>
      <% end %>
    <% end %>

    <br/>
    <%= link_to "Edit Profile", edit_user_path(@user) %>
  </div>
</div>

<hr/>

<% @posts.each do |post| %>
  <%= render "posts/post", { post: post } %>
<% end %>
